# <%= @service_name %>

description     "<%= @service_name %>"

start on runlevel [2345]
stop on runlevel [!2345]

respawn

<% unless @run_as_root -%>
pre-start script
    touch <%= @log_file %>
    chown <%= @heka_user %>:<%= @heka_user %> <%= @log_file %>
end script
<% end -%>

exec <%= @hekad_wrapper %> 2>><%= @log_file %>
