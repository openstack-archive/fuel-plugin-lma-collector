            periods: 1
            function: diff
    - name: 'neutron-api-http-errors'
      description: 'Some 5xx HTTP errors have been detected on neutron-api'
      severity: 'warning'
      enabled: 'true'
      trigger:
        logical_operator: 'or'
        rules:
          - metric: haproxy_backend_response_5xx
            fields:
              backend: 'neutron-api'
            relational_operator: '>'
