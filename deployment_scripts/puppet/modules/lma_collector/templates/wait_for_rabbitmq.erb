    current_channel = conn.channel()

    bound_queue = Queue(QUEUE_NAME, channel=current_channel)
    bound_queue.delete()

    bound_exchange = Exchange(EXCHANGE_NAME, channel=current_channel)
    bound_exchange.delete()
