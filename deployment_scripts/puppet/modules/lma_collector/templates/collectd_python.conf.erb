<LoadPlugin "python">
    Globals true
</LoadPlugin>

<Plugin "python">
    ModulePath "<%= @python_module_path %>"

<% @modules.sort.each do |module_name,config| -%>
    Import "<%= module_name %>"
<% end -%>

<% @modules.sort.each do |module_name,config| -%>
    <Module "<%= module_name %>">
<%   config.sort.each do |key,value| -%>
        <%- if value.is_a?(Hash) -%>
            <%- value.sort.each do |original,new| -%>
           <%= key -%> "<%= original -%>" "<%= new -%>"
            <%- end -%>
        <%- else -%>
           <%= key -%> "<%= value -%>"
        <%- end -%>
<%   end -%>
    </Module>
<% end -%>
</Plugin>

