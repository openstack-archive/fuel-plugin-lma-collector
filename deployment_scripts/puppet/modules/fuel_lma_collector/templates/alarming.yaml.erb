      enabled: 'true'
      trigger:
        logical_operator: 'and'
        rules:
          - metric: pacemaker_resource_percent
            fields:
              resource: rabbitmq
              status: up
            relational_operator: '=='
            threshold: 0
            window: 60
            periods: 0
            function: last
